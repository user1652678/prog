#include <stdio.h>

int main() {
    float num1, num2, num3, temp;

    printf("Digite três números:\n");
    scanf("%f %f %f", &num1, &num2, &num3);

    // Ordena os números
    if (num1 > num2) {
        temp = num1;
        num1 = num2;
        num2 = temp;
    }
    if (num1 > num3) {
        temp = num1;
        num1 = num3;
        num3 = temp;
    }
    if (num2 > num3) {
        temp = num2;
        num2 = num3;
        num3 = temp;
    }

    printf("Os números em ordem crescente são: %.2f, %.2f, %.2f\n", num1, num2, num3);

    return 0;
}

